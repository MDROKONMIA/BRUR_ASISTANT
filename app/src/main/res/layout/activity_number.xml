<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Number">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/mt"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_icon_prev"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:fontFamily="@font/opensansbold"
            android:text="Enter your mobile number"
            android:textColor="@color/black"
            android:textSize="@dimen/text_md" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mt_1.5"
            android:fontFamily="@font/opensansbold"
            android:text="Enter your phone number"
            android:textColor="@color/dim_gray"
            android:textSize="@dimen/text_normal" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@mipmap/ic_flag"
            android:drawablePadding="10dp"
            android:drawingCacheQuality="auto"
            android:fontFamily="@font/opensanssemibold"
            android:includeFontPadding="true"
            android:inputType="phone"
            android:lineHeight="19dp"
            android:text="+880"
            android:textSize="@dimen/text_normal" />
    </LinearLayout>

<!--    <ImageView-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:src="@mipmap/ic_round_next"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        android:layout_marginTop="28dp"-->
<!--        android:layout_marginRight="@dimen/mt"-->
<!--        app:layout_constraintTop_toBottomOf="@+id/linearLayout" /> -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|end">
        <ImageView
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_round_next"
            android:layout_marginRight="@dimen/mt"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center"
        android:layout_marginBottom="@dimen/mt_0.5"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_baseline_copyright_19"
            android:fontFamily="@font/magraregular"
            android:gravity="center"
            android:text="  Developed by CSE Department ,BRUR"
            android:textColor="@color/black"
            android:textSize="17dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>